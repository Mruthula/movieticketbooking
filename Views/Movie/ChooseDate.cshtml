@model MovieTicketBooking.Models.MovieInfo

@{
    ViewData["Title"] = "ChooseDate";
}
@{
    int logged = Convert.ToInt32(ViewData["message"]);

}
@{
    @if (logged == 0)
    {
        <h3>
            <tr>
                @Html.ActionLink("Login", "Login","User")
            </tr>
            <tr>
                @Html.ActionLink("SignUp", "SignUp","User")
            </tr>
        </h3>
    }
    else
    {
        <h3>
            @Html.ActionLink("Logout", "Logout","User")
        </h3>
    }
}

<h3>Choose Date</h3>
<a asp-action="../">Back to movies</a>


<div>
    <h2>
        @Html.DisplayFor(model => model.MovieName)
    </h2>
</div>
<tr>
    Enter date
</tr>
@using (Html.BeginForm("MovieShows", "Movie", FormMethod.Post))
{
    @Html.HiddenFor(model => model.MovieID)
    <input type="date" name="Date" required>
    <button type="submit">Search</button>
}
